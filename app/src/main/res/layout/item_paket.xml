<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_paket"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/nama_paket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Nama Paket"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/harga_paket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Harga Paket"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/detail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Detail 1"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/detail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Detail 2"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/detail3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Detail 3"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/detail4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Detail 4"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/detail5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Detail 5"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Subscribe"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>